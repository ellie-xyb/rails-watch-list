<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.bg_url %>);">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie",  new_list_bookmark_path(@list), class: "btn btn-flat" %>
    <%= link_to "Back", lists_path, class: "btn btn-outline-warning" %>
  </div>
</div>

<div class="container m-4">
  <div class="row">
    <div class="col-10">
      <div class="cards">
        <% @movies.each do |movie| %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
            <%= movie.title %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

